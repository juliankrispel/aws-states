{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "outDir": "dist",
    "rootDir": "src",
    "skipLibCheck": true,
    "plugins": [
      { "transform": "typescript-is/lib/transform-inline/transformer" }
    ],
    "forceConsistentCasingInFileNames": true
  },
  "include": ["src"],
  "exclude": ["**/__tests__"]
}
